<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUser">
    <androidx.cardview.widget.CardView
        android:id="@+id/view_user_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:id="@+id/vlabel_name"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/view_user_name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_toEndOf="@id/vlabel_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vlabel_email"
                android:text="Email: "
                android:textSize="18sp"
                android:layout_below="@id/vlabel_name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Email"
                android:id="@+id/view_user_email"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_below="@id/view_user_name"
                android:layout_toEndOf="@id/vlabel_email"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:  "
                android:id="@+id/vlabel_address"
                android:textSize="18sp"
                android:layout_below="@id/vlabel_email"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/view_user_address"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@id/view_user_email"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_toEndOf="@id/vlabel_address"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vlabel_password"
                android:text="Password: "
                android:textSize="18sp"
                android:layout_below="@id/vlabel_address"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Password"
                android:id="@+id/view_user_password"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_below="@id/view_user_address"
                android:layout_toEndOf="@id/vlabel_address"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/view_user_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_user_update"
        android:text="Update User Detail"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view_user_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_user_delete"
        android:text="Delete User Detail"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>